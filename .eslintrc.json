{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "ecmaFeatures": {
    "modules": true
  },
  "env": {
    "browser": false,
    "es6": true,
    "node": true
  },
  "plugins": [
    "@typescript-eslint",
    "prettier",
    "promise"
  ],
  "extends": [
    "prettier",
    "plugin:@typescript-eslint/recommended",
    "plugin:promise/recommended"
  ],
  "rules": {
    "prettier/prettier": "error"
  }
}
